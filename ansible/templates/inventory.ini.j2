[master]
{% for instance in all_instances if 'master' in instance.tags.Name | lower %}
{{ instance.public_ip_address }} ansible_user=ubuntu ansible_ssh_private_key_file=/.ssh/key1.pem
{% endfor %}

[workers]
{% for instance in all_instances if 'worker' in instance.tags.Name | lower %}
{{ instance.public_ip_address }} ansible_user=ubuntu ansible_ssh_private_key_file=/.ssh/key1.pem
{% endfor %}

[all:vars]
ansible_python_interpreter=/usr/bin/python3

